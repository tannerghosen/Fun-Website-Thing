<!doctype html>
<html>
<head>
    <meta name="author" content="Tanner Ghosen">
    <meta name="description" content="The website of Tanner Ghosen.">
    <meta name="keywords" content="Web Developer, Full-Stack Developer, Tanner, Tanner Ghosen, Ghosen, Buffalo New York, Buffalo, New York" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body id="body">
    <div class="flexcontainer">
        <div class="headercontainer">
            <h1 class="header" id="header"></h1>
        </div>
        <div class="container">
            <div class="appcontainer">
                <div id="app">
                    @RenderBody()
                </div>
            </div>
        </div>
        <div hidden id="buttoncontainer"><div id="backbutton">Back</div><div style="float: left; padding-right: 10px;"></div><div id="nextbutton">Next</div></div>
    </div>
    <div class="linkcontainer">
        <ul>
            <li><a asp-area="" asp-page="/Index">Home</a></li>
            <li><a asp-area="" asp-page="/Sandbox">Sandbox</a></li>
            <li><a asp-area="" asp-page="/Login">Login</a></li>
            <li><a asp-area="" asp-page="/Register">Register</a></li>
            <li><a href="https://github.com/tannerghosen">GitHub</a></li>
        </ul>
        <span id="lightswitch">💡</span> Toggle Light/Dark Mode
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>